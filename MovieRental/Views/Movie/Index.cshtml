@model IEnumerable<MovieRental.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            <span>Year Released</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            <span>Genre</span>
        </th>
        <th>
            <span>Checked Out</span>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearReleased)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Director)
        </td>
        <td>
            @switch(item.GenreID)
                {
                    case 1:
                        <span>Horror</span>
                        break;
                    default:
                    <span>Nothing Here</span>
                    break;
            }
        </td>
        <td>
            @if(item.IsCheckedOut == true)
            {
                <span>True</span>
            } else if(item.IsCheckedOut == false)
            {
                <span>False</span>
            }
        </td>
        <td>
            @if(item.IsCheckedOut.ToString() == "True")
            {
                @Html.ActionLink("Check In", "CheckInMovie", new { id = item.ID }, "Customer");
            }
            else if(item.IsCheckedOut.ToString() == "False")
            {
                @Html.ActionLink("Check Out", "CheckOutMovie", new { id = item.ID }, "Customer");
            }
        </td>
    </tr>
}

</table>
